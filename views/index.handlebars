<h1>Burgers!!</h1>

<h2>Delicious Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <div class ="burger-box"> {{this.burger_name}}</div>
     <button class="devour"id ="{{this.id}}">Devour</button>
    {{/unless}}
  {{/each}}
</ul>
{{> burgers/delete-burger}}
<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
   <div class ="burger-box"> {{this.burger_name}}</div>   
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

<button type="submit" class="add">Still Hungry? Add Burger!</button>

 </form>

  
